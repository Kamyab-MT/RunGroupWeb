@using RunGroupWeb.ViewModels;

@model LoginViewModel

<form asp-action="Login">

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <h3 class="mb-5">Sign in</h3>

                            @if(TempData["Error"] != null)
                            {
                                <span asp-validation-for="Email" class="text-danger">* @TempData["Error"]</span>
                            }

                            <div class="form-outline mb-4">
                                <label asp-for="Email" class="form-label" for="typeEmailX-2">Email</label>
                                <input asp-for="Email" type="email" id="typeEmailX-2" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="Password" class="form-label" for="typePasswordX-2">Password</label>
                                <input asp-for="Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="row">

                                <div class="col-6">
                                    <button class="btn btn-primary btn-lg btn-block form-control" type="submit">Login</button>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-secondary btn-lg btn-block form-control" asp-controller="Home" asp-action="Index">Back to Home</a>
                                </div>
                            </div>

                            <hr class="my-4">

                            <button disabled class="btn btn-lg btn-block btn-primary"
                                    type="submit">
                                <i class="fab fa-google me-2"></i> Sign in with google
                            </button>
                            <br />
                            <br />
                            <button disabled class="btn btn-lg btn-block btn-primary mb-2"
                                    type="submit">
                                <i class="fab fa-facebook-f me-2"></i>Sign in with facebook
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>